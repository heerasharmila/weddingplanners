* {
	padding: 0px;
	margin: 0px;
}

body {
	overflow-x: hidden;
}

.header {
	background-image: linear-gradient(#F0E3FF, #ffffff);
	}

.menutxt {
	text-transform: uppercase;
	color: #0e0000ed;
}

.dropdown:hover .dropdown-menu {
	display: block;
	margin-top: 0;
}
.dropdown-item:hover {
	background-color: #F0E3FF;
	font-size: 19px;

}
 .video-container {
      position: relative;
      width: 100%;
      height: 700px; /* Set your custom height */
      overflow: hidden;
margin-top:110px;
    }

    .video-container video {
      position: absolute;
      top: 50%;
      left: 50%;
      min-width: 100%;
      min-height: 100%;
      width: auto;
      height: auto;
      z-index: 1;
      transform: translate(-50%, -50%);
    }

    .overlay-text {
      position: absolute;
      top: 50%;
      left: 50%;
      z-index: 2;
      transform: translate(-50%, -50%);
      color: white;
      text-align: center;
      background-color: rgba(0, 0, 0, 0.5);
      padding: 1rem 2rem;
      border-radius: 10px;
    }
.video-bg-container {
	width: 100%;
	height: 100vh;
	overflow: hidden;
}

.video-bg-container video {
	position: absolute;
	top: 50%;
	left: 50%;
	min-width: 100%;
	min-height: 100%;
	transform: translate(-50%, -50%);
	object-fit: cover;
	z-index: -1;
}

.video-overlay {
	color: #fff;
	text-align: center;
	padding-top: 10rem;
}

.scroll-arrow {

	font-size: 2rem;
	color: white;
}
.card-img, .card-img-top{
	border:3px solid black;
}


.zoom-out-hover {
	transition: transform 0.3s ease;
}

.zoom-out-hover:hover {
	transform: scale(0.9);
}

.abthead {
	padding-top: 5rem;
}

.abouttxt {
	text-align: justify;
}

.cardtxt {
	font-size: 16px;
	font-weight: 300;
	font-family: cursive;
}

.carousel-control-prev-icon {
	background-color: black;
	border-radius: 50px;
}

.carousel-control-next-icon {
	background-color: black;
	border-radius: 50px;
}

.blogimg {
	border: 5px solid white;
	box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
	border-radius: 8px;
}

.client-logo {
	border: 5px solid white;
	box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
	border-radius: 8px;
}

.contact-form {
	background-color: #F0E3FF;
	border-radius: 12px;
	padding: 30px;
	box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
}

.form-title {
	font-size: 24px;
	font-weight: 600;
	margin-bottom: 20px;
}

.footer {
	background-color: #F0E3FF;
}